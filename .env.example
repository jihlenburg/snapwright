# SnapWright Configuration Example
# Copy this file to .env and customize as needed

# Browser settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Cache settings
SCREENSHOT_CACHE=true
CACHE_DIR=cache/screenshots
CACHE_TTL_HOURS=6

# Performance settings
MAX_BROWSER_CONTEXTS=3
MAX_RETRIES=2

# Behavior settings
WAIT_UNTIL=networkidle
IGNORE_HTTPS_ERRORS=true

# Optional: Screenshot API service (if you want to use API fallback)
# SCREENSHOT_API_KEY=your_api_key_here